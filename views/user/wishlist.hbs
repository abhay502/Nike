        <script>
	function addToCart(proId){
		$.ajax({
			url:'/add-to-cart/'+proId,
			method:'get',
			success:(response)=>{ 
                console.log(response)
				if(response.status){
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Item has been added to cart üõí',
                        showConfirmButton: false,
                        timer: 1500
                        })
						
                    
					 let cartCount=$('#cartcount').html()
					 cartCount=parseInt(cartCount)+1
                     console.log(cartCount)
					 $('#cartcount').html(cartCount)
					 setTimeout(() => window.location.href='/cart', 1200);
				}
			} 
		})
	}
  </script>

<script>
    function removeFromWish(proId){
        $.ajax({
            url:'/remove-wishlist/'+proId,
            method:'post',
            success:(response)=>{
              if(response.status){
               Swal.fire({
                        position: 'center',
                        icon: 'warning',
                        title: 'Item has been removed from wishlist‚ù§Ô∏è',
                        showConfirmButton: false,
                        timer: 1500
                        })
                  	setTimeout(() => window.location.reload(), 2500);
               
				
			}
            }
        })
    }
</script>


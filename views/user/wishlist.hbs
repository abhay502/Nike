

        <main class="main">
        	<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        		<div class="container">
        			<h1 class="page-title">Wishlist<span>‚ù§Ô∏è</span></h1>
        		</div><!-- End .container -->
        	</div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href='/#topSellingProducts'>Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Wishlist‚ù§Ô∏è</li>
                    </ol>
                </div>
            </nav>

        {{#if products}}

            <div class="page-content">
            	<div class="container">
					<table class="table table-wishlist table-mobile">
						<thead>
							<tr>
								<th>Product</th>
								<th>Price</th>
								<th>Stock Status</th>
								<th>Options</th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							{{#each products}}
							<tr>{{#each this.product }}
								<td class="product-col">
									<div class="product">
										<figure class="product-media">
											<a href="/quickview/{{this._id}}">
												
												<img src="/images/product/{{this.img.[0]}}" alt="Product image">
											</a>
										</figure> 

										<h3 class="product-title">
											<a href="/quickview/{{this._id}}">{{this.title}}</a>
										</h3>
									</div>
								</td>
								<td class="price-col">‚Çπ{{this.price}}</td>
								{{#if this.stock}}
								<td class="stock-col"><span class="in-stock">In stock</span></td>
								{{else}}
								<td class="stock-col"><span class="text-danger">Out of stock</span></td>

								{{/if}}
								<td class="action-col">
									{{#if this.stock}}
									<button onclick="addToCart('{{this._id}}')" class="btn btn-block btn-outline-primary-2"><i class="icon-cart-plus"></i>Move to Cart</button>
								    {{else}}
								   <button  class="btn btn-block btn-outline-danger">OUT OF STOCK!</button>
		
									{{/if}}
								</td>
								<td class="remove-col"><button onclick="removeFromWish('{{this._id}}')"   class="btn-remove">‚ùå</button></td>
							</tr>
                            {{/each}}
                           {{/each}}
                           
						</tbody>
					</table>














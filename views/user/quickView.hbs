<script>
	function addToCart(proId){
		$.ajax({
			url:'/add-to-cart/'+proId,
			method:'get',
			success:(response)=>{ 
                console.log(response)
				if(response.status){
					Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Item has been added to cartüõí',
                        showConfirmButton: false,
                        timer: 1500
                        })
                    
					 let cartCount=$('#cartcount').html()
					 cartCount=parseInt(cartCount)+1
                     console.log(cartCount)
					 $('#cartcount').html(cartCount)
				}else{
                    window.location.href='/login'
                }
			} 
		})
	}
  </script>

  <script>
    function addToWishlist(productId){
        console.log(productId)
      $.ajax({
        url:'/add-to-wishlist/'+productId,
        method:'get',
        success:(response)=>{
           if(response.status){
             Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Item has  been added to wishlist‚ù§Ô∏è',
                        showConfirmButton: false,
                        timer: 1500
                        })
           }else{
            Swal.fire({
                        position: 'center',
                        icon: 'warning',
                        title: 'Item already exist in wishlist!',
                        showConfirmButton: false,
                        timer: 1500
                        })
            
           }
        }
      })
    }
  </script>
  

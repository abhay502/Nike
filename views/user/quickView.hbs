                </div><!-- End .rating-container -->

                <p class="product-txt">Brand : {{product.[0].brand.brand}}</p>


               
                <div class="details-filter-row details-row-size">
	                <label for="size">Size:</label>
	                <div class="select-custom">
	                    <select name="size" id="size" class="form-control">
	                        <option value="#" selected="selected">Select a size</option>
	                        <option value="s">Small</option>
	                        <option value="m">Medium</option>
	                        <option value="l">Large</option>
	                        <option value="xl">Extra Large</option>
	                    </select>
	                </div><!-- End .select-custom --> 
	            </div> 

	            
                <div class="details-filter-row details-row-size">
					 <label for="size">Quantity:</label>
                   <button onclick="quantityChange('{{product.[0]._id}}','{{product.[0]._id}}','{{../user._id}}',-1)" style="border: none; background-color:white;"  >-</button>
												  
					<span id="{{product.[0]._id}}">  1</span>
				
					
					
					<button  onclick="quantityChange('{{product.[0]._id}}','{{product.[0]._id}}','{{../user._id}}',1)"  style="border: none; background-color:white;">+</button>
                    
                </div>
                <h6><i class="icon-tag"></i>BEST OFFERS</h6>
                    <ol >
                        <li>‚óæApplicable on: Orders above Rs. 599 (only on first purchase)</li>
                        <li>‚óæCoupon code: <span class="font-weight-bold text-dark" > GRAB50 </span> </li>
                        <li>‚óæCoupon Discount: 50% off (check cart for final savings)</li>
                    </ol>

                <div class="product-details-action">
                    <div class="details-action-wrapper">
                        <button  onclick="addToWishlist('{{product.[0]._id}}')" class="btn-product btn-wishlist" title="Wishlist"><span>Add to Wishlist</span></button>
                        <a href="#" class="btn-product btn-compare" title="Compare"><span>Add to Compare</span></a>
                    </div><!-- End .details-action-wrapper -->
                  
                   {{#if product.[0].stock}}
					<button onclick="addToCart('{{product.[0]._id}}')" class="btn-product btn-cart" style="border: ; " >Add to cart</button>
                    {{else}}
                    <button class="btn btn-danger">OUT OF STOCK</button>

                    {{/if}}
                     <div align="center">
                    Stock left:{{product.[0].stock}}
                   </div>
                </div>

                <div class="product-details-footer">




            <!-- Form Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                            <h3 class="mb-4">Add Product Page</h3>


                            <form   action="/admin/uploadproduct"  method="post" enctype="multipart/form-data"> 
                                <div class="mb-3">
                                    <h6>Title</h6>
                                    <input type="text" name="title" class="form-control" placeholder="Enter product title" required="" >
                                                                                                      
                                     
                                </div> 
                                <div class="mb-3">
                                    <h6>Brand</h6>
                                           
                                    <div class="btn-group">
                                        
                                        <select name="brand" id="brand"  class="form-select"  >
                                        {{#each brands}}
                                        
                                        <option value="{{this._id}}" >{{this.brand}}</option>
                                        
                                        {{/each}}
                                        </select> 
                                        
                                  </div>                        
                                                
                                 </div>
                                
                                
                                <div class="mb-3">
                                    <h6>Stock available</h6>
                                    <input type="phone" name="stock" class="form-control" placeholder="Enter number of stock Available" required="">
                                </div>
                                 <div class="mb-3">
                                    <h6>Price</h6>
                                    <input type="phone" name="price" class="form-control" placeholder="Enter product price" required="">
                                </div>
                                 <div class="mb-3">
                                    <h6>Image</h6>
                                    <input type="file" class="form-control" name="image" id="customFile" multiple="multiple" required> 
                                   
                                </div>
                                <button type="submit"  class="btn btn-success">Submit</button>
                            </form>  
                </div>
            </div>
            <!-- Form End -->


          